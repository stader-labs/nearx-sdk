{
  "include": ["src/**/*"],
  "compilerOptions": {
    // "composite": true,
    "module": "commonjs",
    "lib": ["ES5"],
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    // "importHelpers": false,
  }
}
